@{
    ViewBag.Title = "KeMat";
    Layout = "~/Views/Share/LayoutChung.cshtml";
}

@using DoAnWebMyPham.Models
@model List<SanPham>

<br />
<h4 class="display-4 container justify-content-between align-items-center">Bút Kẻ Mắt</h4>
<br />
<br />
<div class="product-group container">
    <div class="row">
        @foreach (SanPham s in Model)
        {
            if (s.MaLoai == "ML003".TrimEnd())
            {
                <div class="col-lg-3">
                    <div class="card mb-4 box-shadow">
                        <a href="@Url.Action("Details", "SanPham", new { msp = s.MaSanPham })">
                            <img class="card-img-top" src="~/img/@s.HinhAnh" style="height: 330px; width: 100%; display: block;" data-holder-rendered="true" />
                        </a>
                        <div class="card-body" style="text-decoration:none">
                            <h5 class="card-title" style="font-size:16px">@s.TenSanPham</h5>
                            <p class="card-text"><b style="color:red;font-size:20px">@s.GiamGia vnđ</b>&nbsp;&nbsp;&nbsp;<b style="color:blue;font-size:16px; text-decoration:line-through">@s.GiaBan vnđ</b></p>
                            <div class="d-flex justify-content-between align-items-center float-right">
                                <div class="btn-group">
                                    @Html.ActionLink("Chi tiết", "Details", "SanPham", new { msp = @s.MaSanPham }, new { @class = "btn btn-sm btn-outline-success" })
                                    <a href="@Url.Action("ThemMatHang", "DatHang", new {msp=@s.MaSanPham })" class="btn btn-sm btn-outline-success"><i class="fa fa-cart-plus"></i></a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        }
    </div>
</div>

